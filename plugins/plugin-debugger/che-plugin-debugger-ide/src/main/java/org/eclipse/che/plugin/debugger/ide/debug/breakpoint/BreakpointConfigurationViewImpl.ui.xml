<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field='locale' type='org.eclipse.che.plugin.debugger.ide.DebuggerLocalizationConstant'/>
    <ui:with field='coreRes' type='org.eclipse.che.ide.Resources'/>
    <ui:style>
        .location {
            font-weight: bold;
        }

        .inline {
            display: inline-block;
        }

        .breakpoint-condition {
            margin-left: 20PX;
            position: fixed;
            width: 315PX;
            height: 98PX;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="400PX" height="150PX" debugId="breakpoint-configuration-panel">
        <g:north size="20">
            <g:FlowPanel>
                <g:Label ui:field="breakpointLocation" width="100%" debugId="breakpoint-location-label" addStyleNames="{style.location}"/>
            </g:FlowPanel>
        </g:north>
        <g:north size="20">
            <g:FlowPanel>
                <g:CheckBox ui:field="enabled" text="{locale.viewBreakpointConfigurationEnabled}" debugId="breakpoint-enabled"/>
            </g:FlowPanel>
        </g:north>
        <g:center>
            <g:FlowPanel>
                <g:Label text="{locale.viewBreakpointConfigurationCondition}" addStyleNames="{style.inline}"/>
                <g:TextArea ui:field="breakpointCondition" debugId="breakpoint-condition-text"
                            addStyleNames="{style.breakpoint-condition}"/>
            </g:FlowPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>
